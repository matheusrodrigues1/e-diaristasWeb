<main>
  <div class='content-header'>
    <div class='container-fluid'>
      <h1>Editar Serviço</h1>
    </div>
  </div>
  <div class='content'>
    <div class='container-fluid'>
      <form
        action='/admin/servicos/{{servico.id}}/edit?_method=PATCH'
        method='post'
      >
        <div class='card'>
          <div class='card-body'>
            <fieldset>
              <legend>Identificação</legend>
              <div class='row'>
                <div class='col-lg-12'>
                  <div class='col-lg-4'>
                    <div class='{{alert}}'>
                      <p>{{{message}}}</p>
                    </div>
                  </div>
                </div>
                <div class='col-md-4'>
                  <div class='form-group'>
                    <label for='nome'>Nome</label>
                    <input
                      type='text'
                      value='{{#if message}}{{oldData.0.nome}}{{^}}{{servico.nome}}{{/if}}'
                      class='form-control'
                      name='nome'
                                                required
                      placeholder='nome do serviço'
                    />
                  </div>
                </div>
                <div class='col-md-4'>
                  <div class='form-group'>
                    <label for='icone'>Icone</label>
                    <select name='icone' id='icone' class='form-control'>
                      <option
                        value='{{#if message}}{{oldData.0.icone}}{{^}}{{servico.icone}}{{/if}}'
                      >{{#if message}}{{oldData.0.icone}}{{^}}{{servico.icone}}{{/if}}</option>
                      <option value='twf-cleaning-1'>Icone 1</option>
                      <option value='twf-cleaning-2'>Icone 2</option>
                      <option value='twf-cleaning-3'>Icone 3</option>
                    </select>
                  </div>
                </div>
                <div class='col-md-4'>
                  <div class='form-group'>
                    <label for='posicao'>Posição na plataforma</label>
                    <input
                      type='text'
                      value='{{#if message}}{{oldData.0.posicao}}{{^}}{{servico.posicao}}{{/if}}'
                      class='form-control'
                      name='posicao'
                      placeholder='posição do serviço'
                                                data-mask='2'
                          required
                    />
                  </div>
                </div>
              </div>
            </fieldset>
            <fieldset>
              <legend>Globais</legend>
              <div class='row'>
                <div class='col-md-4'>
                  <div class='form-group'>
                    <label for='valorMinimo'>Valor Mínimo</label>
                    <input
                      type='text'
                      value='{{#if message}}{{oldData.0.valorMinimo}}{{^}}{{servico.valorMinimo}}{{/if}}'
                      class='form-control'
                      name='valorMinimo'
                      placeholder='valor minimo do serviço'
                                                required
                          data-mask='#.##0,00'
                          data-mask-reverse='true'
                    />
                  </div>
                </div>
                <div class='col-md-4'>
                  <div class='form-group'>
                    <label for='quantidadedeHoras'>Quantidade mínima de horas</label>
                    <input
                      type='number'
                      value='{{#if message}}{{oldData.0.quantidadedeHoras}}{{^}}{{servico.quantidadedeHoras}}{{/if}}'
                      class='form-control'
                      name='quantidadedeHoras'
                      placeholder='nome do serviço'
                                                data-mask='0'
                          required
                    />
                  </div>
                </div>
                <div class='col-md-4'>
                  <div class='form-group'>
                    <label for='porcentagem'>Porcentagem da comissão</label>
                    <input
                      type='text'
                      value='{{#if message}}{{oldData.0.porcentagem}}{{^}}{{servico.porcentagem}}{{/if}}'
                      class='form-control'
                      name='porcentagem'
                      placeholder='porcentagem da comissão'
                                                data-mask='000'
                          required
                    />
                  </div>
                </div>
              </div>
            </fieldset>
            <fieldset>
              <legend>Cômodos</legend>
              <div class='row'>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='valorQuarto'>Valor por quarto</label>
                    <input
                      type='text'
                      value='{{#if message}}{{oldData.0.valorQuarto}}{{^}}{{servico.valorQuarto}}{{/if}}'
                      class='form-control'
                      name='valorQuarto'
                      placeholder='Valor por quarto'
                                                required
                          data-mask='#.##0,00'
                          data-mask-reverse='true'
                    />
                  </div>
                </div>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='horasQuarto'>Horas por quarto</label>
                    <input
                      type='number'
                      value='{{#if message}}{{oldData.0.horasQuarto}}{{^}}{{servico.horasQuarto}}{{/if}}'
                      class='form-control'
                      name='horasQuarto'
                      placeholder='horas por quarto'
                                                data-mask='0'
                          required
                    />
                  </div>
                </div>
              </div>
              <div class='row'>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='valorSala'>Valor por sala</label>
                    <input
                      type='text'
                      value='{{#if message}}{{oldData.0.valorSala}}{{^}}{{servico.valorSala}}{{/if}}'
                      class='form-control'
                      name='valorSala'
                      placeholder='Valor por Sala'
                                                required
                          data-mask='#.##0,00'
                          data-mask-reverse='true'
                    />
                  </div>
                </div>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='horasSala'>Horas por sala</label>
                    <input
                      type='number'
                      value='{{#if message}}{{oldData.0.horasSala}}{{^}}{{servico.horasSala}}{{/if}}'
                      class='form-control'
                      name='horasSala'
                      placeholder='horas por Sala'
                                                data-mask='0'
                          required
                    />
                  </div>
                </div>
              </div>
              <div class='row'>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='valorBanheiro'>Valor por Banheiro</label>
                    <input
                      type='text'
                      value='{{#if message}}{{oldData.0.valorBanheiro}}{{^}}{{servico.valorBanheiro}}{{/if}}'
                      class='form-control'
                      name='valorBanheiro'
                      placeholder='Valor por Banheiro'
                                                required
                          data-mask='#.##0,00'
                          data-mask-reverse='true'
                    />
                  </div>
                </div>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='horasBanheiro'>Horas por banheiro</label>
                    <input
                      type='number'
                      value='{{#if message}}{{oldData.0.horasBanheiro}}{{^}}{{servico.horasBanheiro}}{{/if}}'
                      class='form-control'
                      name='horasBanheiro'
                      placeholder='horas por Banheiro'
                                                data-mask='0'
                          required
                    />
                  </div>
                </div>
              </div>
              <div class='row'>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='valorConzinha'>Valor por cozinha</label>
                    <input
                      type='text'
                      value='{{#if message}}{{oldData.0.valorConzinha}}{{^}}{{servico.valorConzinha}}{{/if}}'
                      class='form-control'
                      name='valorConzinha'
                      placeholder='Valor por Cozinha'
                                                required
                          data-mask='#.##0,00'
                          data-mask-reverse='true'
                    />
                  </div>
                </div>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='horasCozinha'>Horas por cozinha</label>
                    <input
                      type='number'
                      value='{{#if message}}{{oldData.0.horasCozinha}}{{^}}{{servico.horasCozinha}}{{/if}}'
                      class='form-control'
                      name='horasCozinha'
                      placeholder='horas por Cozinha'
                                                data-mask='0'
                          required
                    />
                  </div>
                </div>
              </div>
              <div class='row'>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='valorQuintal'>Valor por quintal</label>
                    <input
                      type='text'
                      value='{{#if message}}{{oldData.0.valorQuintal}}{{^}}{{servico.valorQuintal}}{{/if}}'
                      class='form-control'
                      name='valorQuintal'
                      placeholder='Valor por Quintal'
                                                required
                          data-mask='#.##0,00'
                          data-mask-reverse='true'
                    />
                  </div>
                </div>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='horasQuintal'>Horas por quintal</label>
                    <input
                      type='number'
                      value='{{#if message}}{{oldData.0.horasQuintal}}{{^}}{{servico.horasQuintal}}{{/if}}'
                      class='form-control'
                      name='horasQuintal'
                      placeholder='horas por Quintal'
                                                data-mask='0'
                          required
                    />
                  </div>
                </div>
              </div>
              <div class='row'>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='valorOutros'>Valor por outros tipos de comodos</label>
                    <input
                      type='text'
                      value='{{#if message}}{{oldData.0.valorOutros}}{{^}}{{servico.valorOutros}}{{/if}}'
                      class='form-control'
                      name='valorOutros'
                      placeholder='Valor por Outros'
                                                required
                          data-mask='#.##0,00'
                          data-mask-reverse='true'
                    />
                  </div>
                </div>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='horasOutros'>Horas por outros tipos de comodos</label>
                    <input
                      type='number'
                      value='{{#if message}}{{oldData.0.horasOutros}}{{^}}{{servico.horasOutros}}{{/if}}'
                      class='form-control'
                      name='horasOutros'
                      placeholder='horas por Outros'
                                                data-mask='0'
                          required
                    />
                  </div>
                </div>
              </div>
              <div class='row'>
                <div class='col-md-4'>
                  <div class='form-group'>
                    <button
                      class='btn btn-primary'
                      type='submit'
                    >Salvar</button>
                  </div>
                </div>
              </div>
            </fieldset>
          </div>
        </div>
      </form>
    </div>
  </div>
</main>