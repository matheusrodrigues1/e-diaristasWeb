<main>
  <div class='content-header'>
    <div class='container-fluid'>
      <h1>Novo Usuario</h1>
    </div>
  </div>
  <div class='content'>
    <div class='container-fluid'>
      <form action='/admin/usuarios' method='post'>
        <div class='card'>
          <div class='card-body'>
            <fieldset>
              <div class='row'>
                <div class='col-lg-12'>
                  <div class='col-lg-4'>
                    <div class='{{alert}}'>
                      <p>{{{message}}}</p>
                    </div>
                  </div>
                </div>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='nome'>Nome</label>
                    <input
                      type='text'
                      value='{{oldData.0.nome}}'
                      class='form-control'
                      name='nome'
                      placeholder='nome do usuario'
                    />
                  </div>
                </div>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='email'>Email</label>
                    <input
                      type='text'
                      value='{{oldData.0.email}}'
                      class='form-control'
                      name='email'
                      placeholder='nome do serviço'
                    />
                  </div>
                </div>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='password'>Password</label>
                    <input
                      type='password'
                      value=''
                      class='form-control'
                      name='password'
                      placeholder='nome do serviço'
                    />
                  </div>
                </div>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='passwordConfirmation'>Confirme o password</label>
                    <input
                      type='password'
                      value=''
                      class='form-control'
                      name='passwordConfirmation'
                      placeholder='nome do serviço'
                    />
                  </div>
                </div>
              </div>
            </fieldset>
            <div class='row'>
              <div class='col-md-4'>
                <div class='form-group'>
                  <button class='btn btn-primary' type='submit'>Salvar</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</main>